local function createAnchor()
    local originalModel = workspace:FindFirstChild("GrabParts")
    if not originalModel then return end

    -- Клонируем модель
    local cleanedModel = originalModel:Clone()
    cleanedModel.Name = "CleanedGrabParts"

    -- Очищаем клон от ненужного
    for _, v in ipairs(cleanedModel:GetDescendants()) do
        if v.Name == "GrabPart" or v.Name == "DragPart" then
            local soundsToRemove = {"AttachSound1", "AttachSound", "BeamSound", "BeamSound1"}
            for _, soundName in ipairs(soundsToRemove) do
                local sound = v:FindFirstChild(soundName)
                if sound then
                    sound:Destroy()
                end
            end
            v.Transparency = 1

        elseif v.Name == "BeamPart" then
            local grabBeam = v:FindFirstChild("GrabBeam")
            if grabBeam then
                grabBeam:Destroy()
            end
        end
    end

    -- Помещаем очищенный клон в workspace
    cleanedModel.Parent = workspace
end

-- Функция для создания переключателя коллизии воды
local function setupWaterCollision()
    -- Создаем переключатель для коллизии воды
    local waterCollisionToggle = createToggle(otherTab, "Water Collision", 2, function(enabled)
        if enabled then
            -- Включение коллизии
            local parentModel = workspace:FindFirstChild("Map")
                and workspace.Map:FindFirstChild("AlwaysHereTweenedObjects")
                and workspace.Map.AlwaysHereTweenedObjects:FindFirstChild("Ocean")
                and workspace.Map.AlwaysHereTweenedObjects.Ocean:FindFirstChild("Object")
                and workspace.Map.AlwaysHereTweenedObjects.Ocean.Object:FindFirstChild("ObjectModel")

            if parentModel then
                for _, child in ipairs(parentModel:GetChildren()) do
                    if child.Name == "Ocean" and child:IsA("BasePart") then
                        child.CanCollide = true  -- Включаем коллизию
                    end
                end
            end
        else
            -- Выключение коллизии
            local parentModel = workspace:FindFirstChild("Map")
                and workspace.Map:FindFirstChild("AlwaysHereTweenedObjects")
                and workspace.Map.AlwaysHereTweenedObjects:FindFirstChild("Ocean")
                and workspace.Map.AlwaysHereTweenedObjects.Ocean:FindFirstChild("Object")
                and workspace.Map.AlwaysHereTweenedObjects.Ocean.Object:FindFirstChild("ObjectModel")

            if parentModel then
                for _, child in ipairs(parentModel:GetChildren()) do
                    if child.Name == "Ocean" and child:IsA("BasePart") then
                        child.CanCollide = false  -- Выключаем коллизию
                    end
                end
            end
        end
    end)

    -- Добавляем информационный текст для коллизии воды
    local waterCollisionInfo = Instance.new("TextLabel")
    waterCollisionInfo.Size = UDim2.new(1, -20, 0, 40)
    waterCollisionInfo.BackgroundTransparency = 1
    waterCollisionInfo.Text = "Toggles the water collision state. Disable to pass through the water."
    waterCollisionInfo.TextColor3 = Color3.fromRGB(200, 200, 200)
    waterCollisionInfo.TextSize = 14
    waterCollisionInfo.Font = Enum.Font.Gotham
    waterCollisionInfo.TextWrapped = true
    waterCollisionInfo.LayoutOrder = 3
    waterCollisionInfo.Parent = otherTab
end

local function setupAntiGrabFTAP()
    local toggle = createToggle(defenceTab, "Anti Grab (FTAP)", 2, function(enabled)
        local success, err = pcall(function()
            ApiFTAP.AntiGrab(enabled)
        end)
        if not success then
            warn("FTAP AntiGrab Error: ", err)
        end
    end)

    local info = Instance.new("TextLabel")
    info.Size = UDim2.new(1, -20, 0, 40)
    info.BackgroundTransparency = 1
    info.Text = "Enables FTAP AntiGrab via Elysium API"
    info.TextColor3 = Color3.fromRGB(200, 200, 200)
    info.TextSize = 14
    info.Font = Enum.Font.Gotham
    info.TextWrapped = true
    info.LayoutOrder = 3
    info.Parent = defenceTab
end

local function setupAntiBarrier()
    local toggle = createToggle(otherTab, "Anti Barrier", 3, function(enabled)
        local plots = workspace:FindFirstChild("Plots")
        if not plots then return end

        for _, plot in ipairs(plots:GetChildren()) do
            local barrierModel = plot:FindFirstChild("Barrier")
            if barrierModel then
                for _, part in ipairs(barrierModel:GetChildren()) do
                    if part:IsA("BasePart") and part.Name == "PlotBarrier" then
                        part.CanCollide = not enabled
                    end
                end
            end
        end
    end)

    local info = Instance.new("TextLabel")
    info.Size = UDim2.new(1, -20, 0, 40)
    info.BackgroundTransparency = 1
    info.Text = "Allows items to pass house barriers"
    info.TextColor3 = Color3.fromRGB(200, 200, 200)
    info.TextSize = 14
    info.Font = Enum.Font.Gotham
    info.TextWrapped = true
    info.LayoutOrder = 4
    info.Parent = otherTab
end

local function setupPlayerSpeed()
    local speedSlider = createSlider(playerTab, "Custom Velocity", 0, 10000, 0, 2, function(value)
        local player = game.Players.LocalPlayer
        local character = player.Character or player.CharacterAdded:Wait()
        local root = character:FindFirstChild("HumanoidRootPart")

        -- Удаляем старый BodyVelocity
        if root then
            local existing = root:FindFirstChild("SpeedVelocity")
            if existing then existing:Destroy() end

            -- Если значение больше 0, создаём новый
            if value > 0 then
                local bv = Instance.new("BodyVelocity")
                bv.Name = "SpeedVelocity"
                bv.Velocity = character.Humanoid.MoveDirection * value
                bv.MaxForce = Vector3.new(1e5, 0, 1e5)
                bv.Parent = root

                -- Обновляем каждый кадр в соответствии с направлением
                game:GetService("RunService").RenderStepped:Connect(function()
                    if bv and bv.Parent then
                        bv.Velocity = character.Humanoid.MoveDirection * value
                    end
                end)
            end
        end
    end)

    -- Подпись
    local speedInfo = Instance.new("TextLabel")
    speedInfo.Size = UDim2.new(1, -20, 0, 30)
    speedInfo.BackgroundTransparency = 1
    speedInfo.Text = "Uses velocity instead of WalkSpeed"
    speedInfo.TextColor3 = Color3.fromRGB(200, 200, 200)
    speedInfo.TextSize = 14
    speedInfo.Font = Enum.Font.Gotham
    speedInfo.TextWrapped = true
    speedInfo.LayoutOrder = 3
    speedInfo.Parent = playerTab

    -- Toggle для постоянной скорости на респавне
    local keepVelocityToggle = createToggle(playerTab, "Keep Velocity On Respawn", 4, function(enabled)
        ActiveFunctions.KeepVelocity = enabled

        if enabled then
            local savedValue = speedSlider.getValue()

            game.Players.LocalPlayer.CharacterAdded:Connect(function(char)
                local root = char:WaitForChild("HumanoidRootPart")
                task.wait(0.1)

                local bv = Instance.new("BodyVelocity")
                bv.Name = "SpeedVelocity"
                bv.Velocity = char.Humanoid.MoveDirection * savedValue
                bv.MaxForce = Vector3.new(1e5, 0, 1e5)
                bv.Parent = root

                game:GetService("RunService").RenderStepped:Connect(function()
                    if bv and bv.Parent then
                        bv.Velocity = char.Humanoid.MoveDirection * savedValue
                    end
                end)
            end)
        end
    end)
end

local function setupSuperStrength()
    local strengthValue = 150  -- Начальная сила

    -- Переключатель для активации супер силы
    local superStrengthToggle = createToggle(combatTab, "Super Strength", 5, function(enabled)
        ActiveFunctions.SuperStrength = enabled
        if enabled then
            ApiFTAP.SuperStrength(true)  -- Включаем супер силу
        else
            ApiFTAP.SuperStrength(false)  -- Выключаем супер силу
        end
    end)

    -- Подпись
    local strengthInfo = Instance.new("TextLabel")
    strengthInfo.Size = UDim2.new(1, -20, 0, 40)
    strengthInfo.BackgroundTransparency = 1
    strengthInfo.Text = "Gives you super strength to move heavy objects"
    strengthInfo.TextColor3 = Color3.fromRGB(200, 200, 200)
    strengthInfo.TextSize = 14
    strengthInfo.Font = Enum.Font.Gotham
    strengthInfo.TextWrapped = true
    strengthInfo.LayoutOrder = 6
    strengthInfo.Parent = combatTab

    -- Слайдер для силы
    local strengthSlider = createSlider(combatTab, "Strength Power", 50, 10000, strengthValue, 7, function(value)
        strengthValue = value
        ApiFTAP.ValueStrength(strengthValue)  -- Устанавливаем значение силы
    end)

    -- Подпись к слайдеру
    local strengthSliderInfo = Instance.new("TextLabel")
    strengthSliderInfo.Size = UDim2.new(1, -20, 0, 30)
    strengthSliderInfo.BackgroundTransparency = 1
    strengthSliderInfo.Text = "Adjust the power of your super strength"
    strengthSliderInfo.TextColor3 = Color3.fromRGB(200, 200, 200)
    strengthSliderInfo.TextSize = 14
    strengthSliderInfo.Font = Enum.Font.Gotham
    strengthSliderInfo.TextWrapped = true
    strengthSliderInfo.LayoutOrder = 8
    strengthSliderInfo.Parent = combatTab
end

local function setupInfiniteJump()
    local jumpPower = 50
    local activeBV = nil

    -- Переключатель
    local infiniteJumpToggle = createToggle(playerTab, "Infinite Jump", 5, function(enabled)
        ActiveFunctions.InfiniteJump = enabled
    end)

    -- Подпись
    local jumpInfo = Instance.new("TextLabel")
    jumpInfo.Size = UDim2.new(1, -20, 0, 40)
    jumpInfo.BackgroundTransparency = 1
    jumpInfo.Text = "Allows you to fly upward by holding space"
    jumpInfo.TextColor3 = Color3.fromRGB(200, 200, 200)
    jumpInfo.TextSize = 14
    jumpInfo.Font = Enum.Font.Gotham
    jumpInfo.TextWrapped = true
    jumpInfo.LayoutOrder = 6
    jumpInfo.Parent = playerTab

    -- Слайдер для силы
    local jumpPowerSlider = createSlider(playerTab, "Jump Power", 50, 200, 50, 7, function(value)
        jumpPower = value
    end)

    -- Подпись к слайдеру
    local jumpPowerInfo = Instance.new("TextLabel")
    jumpPowerInfo.Size = UDim2.new(1, -20, 0, 30)
    jumpPowerInfo.BackgroundTransparency = 1
    jumpPowerInfo.Text = "Uses upward velocity (not Humanoid jump)"
    jumpPowerInfo.TextColor3 = Color3.fromRGB(200, 200, 200)
    jumpPowerInfo.TextSize = 14
    jumpPowerInfo.Font = Enum.Font.Gotham
    jumpPowerInfo.TextWrapped = true
    jumpPowerInfo.LayoutOrder = 8
    jumpPowerInfo.Parent = playerTab

    -- Обработка зажатия/отпускания пробела
    local UIS = game:GetService("UserInputService")
    UIS.InputBegan:Connect(function(input, processed)
        if processed or not ActiveFunctions.InfiniteJump then return end
        if input.KeyCode == Enum.KeyCode.Space then
            local char = game.Players.LocalPlayer.Character
            if not char then return end
            local root = char:FindFirstChild("HumanoidRootPart")
            if not root then return end

            -- Создаем BodyVelocity
            local bv = Instance.new("BodyVelocity")
            bv.Name = "InfiniteJumpVelocity"
            bv.Velocity = Vector3.new(0, jumpPower, 0)
            bv.MaxForce = Vector3.new(0, 1e5, 0)
            bv.Parent = root
            activeBV = bv
        end
    end)

    UIS.InputEnded:Connect(function(input)
        if input.KeyCode == Enum.KeyCode.Space and activeBV then
            activeBV:Destroy()
            activeBV = nil
        end
    end)
end

-- Функция спавна паллета перед игроком
local function spawnPallet()
    local player = game.Players.LocalPlayer
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
    
    -- Получаем текущую позицию и направление персонажа
    local currentPosition = humanoidRootPart.Position
    local lookVector = humanoidRootPart.CFrame.LookVector
    
    -- Создаем позицию перед игроком (2 единицы вперед вместо 5)
    local targetPosition = currentPosition + (lookVector * 2)
    
    -- Создаем CFrame, смотрящий в ту же сторону, что и игрок
    local targetCFrame = CFrame.new(targetPosition, targetPosition + lookVector)
    
    -- Добавляем небольшой отступ вверх, чтобы паллет не застрял в земле
    targetCFrame = targetCFrame * CFrame.new(0, 0.5, 0)
    
    -- Вызываем функцию спавна паллета
    pcall(function()
        local args = {
            [1] = "PalletLightBrown",  -- Название объекта, который спавним
            [2] = targetCFrame,        -- Позиция и ориентация
            [3] = Vector3.new(0, 31.24, 0) -- Размер объекта
        }
        -- Отправляем запрос на сервер для спавна
        game:GetService("ReplicatedStorage"):WaitForChild("MenuToys"):WaitForChild("SpawnToyRemoteFunction"):InvokeServer(unpack(args))
    end)
end

-- Добавляем функцию спавна паллета на клавишу Tab
