        ActiveFunctions.BurnGrab = enabled
        ApiFTAP.BurnGrab(enabled)  -- Включаем/выключаем Burn Grab
    end)

    -- Переключатель для Radiation Grab
    local radiationGrabToggle = createToggle(combatTab, "Radiation Grab", 6, function(enabled)
        ActiveFunctions.RadiationGrab = enabled
        ApiFTAP.RadiationGrab(enabled)  -- Включаем/выключаем Radiation Grab
    end)

    -- Переключатель для Poison Grab
    local poisonGrabToggle = createToggle(combatTab, "Poison Grab", 7, function(enabled)
        ActiveFunctions.PoisonGrab = enabled
        ApiFTAP.PoisonGrab(enabled)  -- Включаем/выключаем Poison Grab
    end)

    -- Переключатель для NoClip Grab
    local noClipGrabToggle = createToggle(combatTab, "NoClip Grab", 8, function(enabled)
        ActiveFunctions.NoClipGrab = enabled
        ApiFTAP.NoClipGrab(enabled)  -- Включаем/выключаем NoClip Grab
    end)

    -- Переключатель для Kill Grab
    local killGrabToggle = createToggle(combatTab, "Kill Grab", 9, function(enabled)
        ActiveFunctions.KillGrab = enabled
        ApiFTAP.KillGrab(enabled)  -- Включаем/выключаем Kill Grab
    end)

    -- Переключатель для Air Grab
    local airGrabToggle = createToggle(combatTab, "Air Grab", 10, function(enabled)
        ActiveFunctions.AirGrab = enabled
        ApiFTAP.AirGrab(enabled)  -- Включаем/выключаем Air Grab
    end)
end

local function setupAuras()
    -- Переключатель для Magnetic Aura
    local magneticAuraToggle = createToggle(auraTab, "Magnetic Aura", 5, function(enabled)
        ActiveFunctions.MagneticAura = enabled
        ApiFTAP.MagneticAura(enabled)  -- Включаем/выключаем Magnetic Aura
    end)

    -- Переключатель для Radiation Aura
    local radiationAuraToggle = createToggle(auraTab, "Radiation Aura", 6, function(enabled)
        ActiveFunctions.RadiationAura = enabled
        ApiFTAP.RadiationAura(enabled)  -- Включаем/выключаем Radiation Aura
    end)

    -- Переключатель для Poison Aura
    local poisonAuraToggle = createToggle(auraTab, "Poison Aura", 7, function(enabled)
        ActiveFunctions.PoisonAura = enabled
        ApiFTAP.PoisonAura(enabled)  -- Включаем/выключаем Poison Aura
    end)

    -- Переключатель для Aura WhiteList
    local auraWhiteListToggle = createToggle(auraTab, "Aura WhiteList", 8, function(enabled)
        ActiveFunctions.AuraWhiteList = enabled
        ApiFTAP.AuraWhiteList(enabled)  -- Включаем/выключаем Aura WhiteList
    end)

    -- Вызываем все функции настройки
    setupAntiGrabFTAP()
    setupPlayerSpeed()
    setupInfiniteJump()
    setupNoClip()
    setupTeleportTab()
    setupPalletKeybind()
    setupAnchorKeybind()
    setupWaterCollision()
    setupAntiBarrier()
    setupSuperStrength()
    setupCombat()
    setupAuras()
    setupKeyBindings()
    
    -- Устанавливаем первую вкладку как активную по умолчанию
    for _, btn in pairs(Tabs:GetChildren()) do
        if btn:IsA("TextButton") then
            btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            if btn.Text == "Defence" then
                btn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
            end
        end
    end
    
    for _, v in pairs(Content:GetChildren()) do
        if v:IsA("ScrollingFrame") then
            v.Visible = false
            if v.Name == "DefenceTab" then
                v.Visible = true
            end
        end
    end
    
    return ScreenGui
end

-- СОЗДАНИЕ МЕНЮ
local menu = createMenu()

-- ОБРАБОТКА ЗАКРЫТИЯ СКРИПТА
game:GetService("CoreGui").ChildRemoved:Connect(function(child)
    if child.Name == "BlobmanMenu" then
        getgenv().BlobmanMenuOpen = false
    end
end)

